//Primer Punto
public class Main {
    public static void main(String[] args) {
        var numeroIf = 1;

        if (numeroIf >= 0) {
            System.out.println("Positivo");
        } else if (numeroIf < 0) {
            System.out.println("Negativo");
        }
    //Segundo Punto
        int NumeroWhile = 0;

        while (NumeroWhile <= 3) {
            System.out.println(NumeroWhile);
            NumeroWhile++;
        }
        //Tercer Punto

                int NumeroDoWhile = 0;

                do {
                    System.out.println(NumeroDoWhile);
                    NumeroDoWhile++;
                }while (NumeroDoWhile <= 3);
        //Cuarto Punto

        int numeroFor =0;
        for (;numeroFor <= 3; numeroFor++) {
            System.out.println(numeroFor);
        }
        //Quinto Punto
                var estacion = "DVBD";

                switch (estacion) {
                    case "VERANO":
                        System.out.println("es verano");
                        break;
                    case "INVIERNO":
                        System.out.println("es invierno");
                        break;
                    case "OTOÑO":
                        System.out.println("es otoño");
                        break;
                    case "PRIMEVERA":
                        System.out.println("es primavera");
                        break;
                    default:
                        System.out.println("EL VALOR AGREGADO, NO ES UNA ESTACIÓN");
                }


    }
        }
